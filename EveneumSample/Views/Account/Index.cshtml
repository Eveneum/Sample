@{
    ViewData["Title"] = "Accounts";
    var streamHeaders = (List<Eveneum.StreamHeader>)ViewData["StreamHeaders"];
}

<form asp-controller="Account" asp-action="Create" method="post">
    <h1 style="display: inline;">Accounts (@streamHeaders.Count)</h1>
    <button class="btn-primary" style="display: inline;">Open New Account</button>
</form>

<table class="table">
    <tr>
        <th>Version</th>
        <th>Account number</th>
        <th></th>
    </tr>

    @foreach (var header in streamHeaders)
    {
        <tr>
            <td>
                @header.Version
            </td>
            <td>
                @Html.ActionLink($"{header.StreamId} - click for details", "Details", new { id = header.StreamId })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = header.StreamId })
            </td>
        </tr>
    }

</table>

